{
  "name": "msq-staking-contract",
  "description": "Solidity smart contracts for SQR staking functionality",
  "version": "0.0.2",
  "scripts": {
    "clean": "shx rm -rf ./dist ./artifacts ./cache ./coverage ./typechain-types ./coverage.json && yarn typechain",
    "commit": "git-cz",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile && tsc",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage --network hardhat --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" --show-stack-traces && pnpm typechain",
    "deploy": "hardhat deploy",
    "deploy:accounts": "hardhat deploy --tags accounts",
    "deploy:deploy": "hardhat deploy --tags SQRStaking:deploy",
    "deploy:upgrade": "hardhat deploy --tags SQRStaking:upgrade",
    "deploy:verify": "hardhat deploy --tags SQRStaking:verify",
    "deploy:fetch": "hardhat deploy --tags SQRStaking:fetch",
    "deploy:fetch2": "hardhat deploy --tags SQRStaking:fetch2",
    "deploy:deposit-sig1": "hardhat deploy --tags SQRStaking:deposit-sig1",
    "deploy:deposit-sig2": "hardhat deploy --tags SQRStaking:deposit-sig2",
    "deploy:emergency-withdraw": "hardhat deploy --tags SQRStaking:emergency-withdraw",
    "deploy:change-balance-limit": "hardhat deploy --tags SQRStaking:change-balance-limit",
    "deploy:publish-abi": "hardhat deploy --tags SQRStaking:publish-abi",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install && set DOTENV_CONFIG_PATH=./.env.example yarn typechain",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "format": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "format:check": "prettier --check --config ./.prettierrc.yml \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "hardhat test --network hardhat",
    "unit-test": "mocha -r ts-node/register 'common/**/*spec.ts'",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^2.3.1",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.6",
    "@types/fs-extra": "^11.0.2",
    "@types/lodash": "^4.14.199",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.7.2",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "app-root-path": "^3.1.0",
    "chai": "^4.3.10",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eth-permit": "^0.2.3",
    "ethers": "^6.7.1",
    "fastify-tsconfig": "^2.0.0",
    "fs-extra": "^11.1.1",
    "hardhat": "^2.17.4",
    "hardhat-deploy": "^0.11.37",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "lodash": "^4.17.21",
    "merkletreejs": "^0.3.10",
    "mocha": "^10.2.0",
    "pinst": "^3.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "shx": "^0.3.4",
    "solhint": "^3.6.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethers",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "typescript",
    "typechain"
  ],
  "packageManager": "yarn@3.2.1",
  "publishConfig": {
    "access": "public"
  }
}
